<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.horatiu.decanting.Settings">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Player Name:"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="0"
            />

        <EditText
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Anonymous"
            android:id="@+id/playerName"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal|right" />

        <Button
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Adjust Player Name"
            android:onClick="adjustPlayerName"
            android:id="@+id/changeName"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Level Generator Difficulty:"
            android:id="@+id/generatorDifficultyText"
            android:onClick="generatorDifficulty"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5"
            android:id="@+id/generatorDifficulty"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal|right"
            android:numeric="integer" />

        <Button
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Adjust Difficulty"
            android:onClick="adjustDifficulty"
            android:id="@+id/button"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

    </GridLayout>

    <!--<Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clear Highscores"
        android:id="@+id/button2"
        android:onClick="clearDB"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" /> -->

</RelativeLayout>
